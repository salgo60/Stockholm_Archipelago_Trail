    "# SAT – Reservat & Tältplatser (Version 2 with GeoJSON Shapes)"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "metadata": {},
   "outputs": [],
   "source": [
    "import folium\n",
    "from folium import FeatureGroup, GeoJson, Icon, Popup, LayerControl\n",
    "from SPARQLWrapper import SPARQLWrapper, JSON\n",
    "import pandas as pd\n",
    "from IPython.display import display\n",
    "\n",
    "# SPARQL query\n",
    "sparql = SPARQLWrapper(\"https://query.wikidata.org/sparql\")\n",
    "sparql.setReturnFormat(JSON)\n",
    "sparql.setQuery("""\n",
    "SELECT DISTINCT ?item ?itemLabel ?typ ?SATLabel ?coord ?img ?www ?Naturvårdsreg ?Facebook ?Instagram ?InstagramL ?shape ?Googlemap WHERE {\n",
    "  {\n",
    "    wd:Q131318799 wdt:P3018 ?item.\n",
    "    BIND(\"Naturreservat\"@sv AS ?typ)\n",
    "    OPTIONAL { ?item wdt:P625 ?coord. }\n",
    "    OPTIONAL { ?item wdt:P3896 ?shape. }\n",
    "    OPTIONAL { ?item wdt:P18 ?img. }\n",
    "    OPTIONAL { ?item wdt:P856 ?www. }\n",
    "    OPTIONAL {\n",
    "      ?item wdt:P2789 ?SATid.\n",
    "      ?SATid wdt:P361 wd:Q131318799.\n",
    "      ?SATid rdfs:label ?SATLabel. FILTER(LANG(?SATLabel)=\"sv\")\n",
    "    }\n",
    "    OPTIONAL { ?item wdt:P3613 ?Naturvårdsregid. }\n",
    "    BIND(IF(BOUND(?Naturvårdsregid), URI(CONCAT(\"https://skyddadnatur.naturvardsverket.se/sknat/?nvrid=\", STR(?Naturvårdsregid))), \"\") AS ?Naturvårdsreg)\n",
    "  }\n",
    "  UNION\n",
    "  {\n",
    "    VALUES ?sleep { wd:Q832778 }\n",
    "    ?item wdt:P6104 wd:Q134294510;\n",
    "          wdt:P625 ?coord;\n",
    "          wdt:P31 ?sleep.\n",
    "    BIND(\"Tältplats\"@sv AS ?typ)\n",
    "    OPTIONAL {\n",
    "      ?item wdt:P2789 ?SATid.\n",
    "      ?SATid wdt:P361 wd:Q131318799.\n",
    "      ?SATid rdfs:label ?SATLabel. FILTER(LANG(?SATLabel)=\"sv\")\n",
    "    }\n",
    "    OPTIONAL {?item wdt:P856 ?www}\n",
    "    OPTIONAL {?item wdt:P2003 ?InstaU}\n",
    "    OPTIONAL {?item wdt:P4173 ?InstaL}\n",
    "    OPTIONAL {?item wdt:P2013 ?FB}\n",
    "    OPTIONAL {?item wdt:P3749 ?Gmap}\n",
    "    OPTIONAL {?item wdt:P18 ?img. }\n",
    "    BIND(URI(CONCAT(\"https://www.facebook.com/\", ?FB)) AS ?Facebook)\n",
    "    BIND(URI(CONCAT(\"https://www.instagram.com/\", ?InstaU)) AS ?Instagram)\n",
    "    BIND(URI(CONCAT(\"https://www.instagram.com/explore/locations/\", ?InstaL)) AS ?InstagramL)\n",
    "    BIND(URI(CONCAT(\"https://www.google.com/maps?cid=\", ?Gmap)) AS ?Googlemap)\n",
    "  }\n",
    "  SERVICE wikibase:label { bd:serviceParam wikibase:language \"sv,en\". }\n",
    "}""")\n",
    "\n",
    "results = sparql.query().convert()\n",
    "rows = []\n",
    "for r in results[\"results\"][\"bindings\"]:\n",
    "    def val(k): return r[k][\"value\"] if k in r else None\n",
    "    coord = val(\"coord\")\n",
    "    lat, lon = None, None\n",
    "    if coord:\n",
    "        coord = coord.replace(\"Point(\", \"\").replace(\")\", \"\")\n",
    "        lon, lat = map(float, coord.split())\n",
    "    rows.append({\n",
    "        \"label\": val(\"itemLabel\"),\n",
    "        \"typ\": val(\"typ\"),\n",
    "        \"sat\": val(\"SATLabel\"),\n",
    "        \"lat\": lat,\n",
    "        \"lon\": lon,\n",
    "        \"shape\": val(\"shape\"),\n",
    "        \"img\": val(\"img\"),\n",
    "        \"www\": val(\"www\"),\n",
    "        \"Naturvårdsreg\": val(\"Naturvårdsreg\"),\n",
    "        \"Facebook\": val(\"Facebook\"),\n",
    "        \"Instagram\": val(\"Instagram\"),\n",
    "        \"InstagramL\": val(\"InstagramL\"),\n",
    "        \"Googlemap\": val(\"Googlemap\"),\n",
    "    })\n",
    "df = pd.DataFrame(rows)\n",
    "\n",
    "# Create map\n",
    "m = folium.Map(location=[59.4, 18.8], zoom_start=8)\n",
    "\n",
    "# Point layers\n",
    "point_layers = {\n",
    "    \"Naturreservat\": FeatureGroup(\"Naturreservat\"),\n",
    "    \"Tältplats\": FeatureGroup(\"Tältplats\")\n",
    "}\n",
    "colors = {\"Naturreservat\": \"green\", \"Tältplats\": \"orange\"}\n",
    "\n",
    "# Polygon layers by SAT section\n",
    "area_layers = {}\n",
    "\n",
    "for _, row in df.iterrows():\n",
    "    if pd.notna(row[\"lat\"]) and pd.notna(row[\"lon\"]):\n",
    "        popup_parts = [f\"<b>{row['label']}</b>\"]\n",
    "        if pd.notna(row[\"sat"]): popup_parts.append(f\"<i>{row['sat']}</i>\")\n",
    "        if pd.notna(row[\"img"]): popup_parts.append(f'<img src="{row["img"]}" width="150">')\n",
    "        for link, name in [(row[\"www\"], \"Webbplats\"), (row[\"Naturvårdsreg\"], \"Naturvårdsregistret\"),\n",
    "                           (row[\"Facebook\"], \"Facebook\"), (row[\"Instagram\"], \"Instagram\"),\n",
    "                           (row[\"InstagramL\"], \"Instagram-plats\"), (row[\"Googlemap\"], \"Google Maps\")]:\n",
    "            if pd.notna(link):\n",
    "                popup_parts.append(f'<a href="{link}" target="_blank">{name}</a>')\n",
    "        popup = Popup("<br>".join(popup_parts), max_width=300)\n",
    "        folium.Marker([row[\"lat"], row[\"lon"]], popup=popup,\n",
    "                      icon=Icon(color=colors.get(row[\"typ"], \"blue"), icon=\"info-sign"))\n",
    "                      .add_to(point_layers[row[\"typ\"]])\n",
    "\n",
    "    if pd.notna(row[\"shape"]) and pd.notna(row[\"sat"]):\n",
    "        try:\n",
    "            raw_url = row[\"shape\"].replace(\"https://commons.wikimedia.org/wiki/\",\n",
    "                                             \"https://commons.wikimedia.org/w/index.php?title=\") + \"&action=raw\"\n",
    "            geojson = folium.GeoJson(\n",
    "                raw_url,\n",
    "                name=row[\"label\"],\n",
    "                style_function=lambda x: {\n",
    "                    \"fillColor\": \"purple\", \"color\": \"purple\", \"weight\": 2, \"fillOpacity\": 0.3\n",
    "                },\n",
    "                tooltip=row[\"label\"]\n",
    "            )\n",
    "            if row[\"sat\"] not in area_layers:\n",
    "                area_layers[row[\"sat\"]] = FeatureGroup(name=f\"Skyddat område – {row['sat']}\", show=False)\n",
    "            area_layers[row[\"sat\"]].add_child(geojson)\n",
    "        except Exception as e:\n",
    "            print(f\"Failed to load GeoJSON for {row['label']}: {e}\")\n",
    "\n",
    "# Add all layers\n",
    "for l in point_layers.values(): m.add_child(l)\n",
    "for l in area_layers.values(): m.add_child(l)\n",
    "m.add_child(LayerControl(collapsed=False))\n",
    "display(m)"
   ]
  }
